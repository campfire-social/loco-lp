      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1441.16 663">
        <defs>
          <style>
            .cls-x {
              fill: #e15829;
            }

            .cls-y {
              fill: #983820;
            }
          </style>
        </defs>
        <g id="Layer_2" data-name="Layer 2">
          <g id="Layer_1-2" data-name="Layer 1">
            <polygon class="cls-x"
              points="1297.16 228 311.16 526 125.16 0 0 0 229.16 663 1441.16 273 1439.9 0 1297.16 0 1297.16 228" />
            <polygon class="cls-y" points="1297.16 228 1297.16 0 125.16 0 311.16 526 1297.16 228" />
          </g>
        </g>
      </svg>
    </div>
  </div>
  <div class="relative -z-1 -mt-2/5 lg:mt-0">
    {% image "/assets/img/bg-image.jpg", ""  %}
    <div class="absolute right-0 z-1 w-1/2 top-18p lg:top-30p" style="transform: rotate(-20deg); ">
      <span class="block w-full opacity-50 filter saturate-150 text-loco-orange">
        {% include 'icons/loco-logo', icon_class: 'fill-current block w-full' %}
      </span>
    </div>
    <div class="absolute -bottom-1px left-0 w-full z-10">
      <svg role="presentation" class="w-full" viewBox="0 0 1320 516" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M1440 0L0 516H1440V0Z" fill="#DCCFAF" />
      </svg>
    </div>
  </div>

</section>

{% comment %} Recipe Section {% endcomment %}
<section id="recipes" class="px-3">
  <div class="container mx-auto relative -mt-20 lg:-mt-1/4 js-show-on-scroll">
    <div class="">
      {% include 'components/headline', headline_text: "Whatcha Griddlin' Next? 
      ", headline_tag: 'h2' %}
    </div>

    <div class="pt-12">
      {% if recipes.size > 0 %}
      <ul class="lg:grid lg:grid-cols-4 lg:grid-rows-2 lg:gap-6 space-y-6 lg:space-y-0">
        {% for recipe in recipes %}

        {% assign gridClass = "lg:row-span-2 lg:col-span-2 lg:md:row-span-4" %}
        {% comment %}
        {% elsif forloop.index == 2 %}
        {% assign gridClass = "lg:row-span-1 lg:col-span-1" %}
        {% elsif forloop.index == 3 %}
        {% assign gridClass = "lg:row-span-1 lg:col-span-1" %}
        {% endcomment %}
        <li class="{{gridClass}} h-full">
          <article class="relative flex flex-col bg-black h-full">
            <div class="aspect-w-3 aspect-h-2 lg:h-full top-0 left-0 w-full">
              <div class="bg-gradient-to-t opacity-80 from-black z-20 w-full h-full"></div>
              {% assign _recipeAlt = "photo of" | append: recipe.name %}
              {% image recipe.image, _recipeAlt, "recipe-image"  %}
            </div>
            <div class="absolute z-30 bottom-0 left-0 w-full">
              <div class="p-6 text-white">
                <h3 class="font-serif font-bold text-2xl">{{recipe.name}}</h3>
                <div class="inline-flex">
                  <p>
                    <span class="sr-only">Difficulty: </span>
                    {{recipe.difficulty}}
                  </p>
                  <span class="mx-3">|</span>
                  <p>
                    <span class="sr-only">Time: </span>
                    {{recipe.time}}
                  </p>
                </div>
              </div>
            </div>
          </article>
        </li>
        {% endfor %}
      </ul>
      {% endif %}
    </div>
  </div>
</section>

