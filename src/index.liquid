{% comment %} Product Section {% endcomment %}
<section id="griddles" class="relative bg-loco-orange">
  <div class="js-show-on-scroll px-6 md:pt-8">
    <div class="container mx-auto">
      <h2
        class="bg-black px-6 py-4 text-loco-tan text-xl md:text-2xl lg:text-3xl font-serif font-strong font-bold text-center max-w-xl lg:max-w-4xl  tracking-wide mx-auto">
        Introducing Griddles from LoCo. <br/> Your new favorite way to cook.
      </h2>
    </div>
  </div>
  {% if griddles.size > 0 %}
  <div class="js-show-on-scroll px-2 md:px-3 mt-6 md:mt-10">
    <div class="max-w-4xl lg:container mx-auto mb-12 lg:mb-16">
      {% include 'components/headline', headline_text: 'The Griddles', headline_tag: 'h3' %}
      <ul class="mt-6 space-y-8 lg:space-y-0">
        {% for griddle in griddles %}
        {% capture thecycle %}{% cycle 'odd', 'even' %}{% endcapture %}
        {% if thecycle == 'even' %}
        {% assign _even = true %}
        {% else %}
        {% assign _even = false %}
        {% endif %}
        {% assign _prodDelay = 250 | times: forloop.index %}
        <li class="{%if forloop.last%}border-b-2 border-loco-tan{%endif%}">
          {% include 'components/product', content: griddle, even: _even  %}
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  {% endif %}
  <div class="js-show-on-scroll mt-8 pb-12 lg:pb-16">
    <h3 class="font-serif max-w-xs md:max-w-none mx-auto text-center text-loco-tan text-2xl lg:text-3xl font-bold">
      Available at your favorite grilling
      retailers.</h3>
    {% if retailers.size > 0 %}
    <div class="container mx-auto">
      <ul class="grid grid-cols-2 md:grid-cols-4 gap-6 lg:gap-8 mt-8 items-center">
        {% for retailer in retailers %}
        {% assign _retDelay = 250 | times: forloop.index %}
        <li>
          <a class="block text-center" href="{{retailer.url}}" target="_blank">
            {% if retailer.image and retailer.image != "" %}
            <img class="mx-auto w-36" src="{{retailer.image}}" alt="{{retailer.name}} logo">
            {% endif %}
            <span class="sr-only">{{retailer.name}}</span>
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
  </div>
</section>

{% comment %} Newsletter Section {% endcomment %}
<section id="newsletter" class="relative h-auto">
  <div class="relative z-1">
    <div class="bg-loco-umber px-6 pt-8 lg:bg-transparent lg:absolute lg:z-10 lg:top-0 lg:left-0 lg:w-full">
      <div class="js-show-on-scroll text-white lg:p-8 lg:container lg:mx-auto xl:max-w-7xl">
        <div  class="lg:grid lg:grid-cols-2 lg:gap-20">
          <h2 class="sr-only">Subscribe to the LoCo Newsletter</h2>
          <p class="text-xl md:text-3xl uppercase font-bold mb-8">Pull up a seat at the table for the latest product news and fresh recipe ideas</p>
          <div>
            <form id="newsLetterForm" action="{{site.formspree}}" method="POST">
              <div class="lg:w-3/4">
                <label for="emailAddress" class="sr-only">Your Email Address</label>
                <input name="emailAddress" id="emailAddress" class="w-full p-4 text-black mb-6 focus:outline-none focus:ring focus:border-loco-blue" type="email" placeholder="Your Email Address" required>
              </div>
              {%include "components/button", btn_id: "newsLetterFormSend", btn_text: "Subscribe", btn_type: "submit" %}
            </form>
            <p class="text-white font-semibold text-xl" id="newsLetterFormStatus"></p>
          </div>
        </div>
      </div>
    </div>
    <div class="relative z-1 lg:hidden -mt-1px">
      <svg role="presentation" class="w-full" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 780.28 345.13">
        <defs>
          <style>
            .cls-1 {
              fill: #e15829;
            }

            .cls-2 {
              fill: #983820;
            }
          </style>
        </defs>
        <g id="Layer_2" data-name="Layer 2">
          <g id="Layer_1-2" data-name="Layer 1">
            <polygon class="cls-1" points="0 345.13 780.28 94.05 780.28 0 0 235.83 0 345.13" />
            <polygon class="cls-2" points="0 235.83 780.28 0 0 0 0 235.83" />
          </g>
        </g>
      </svg>
    </div>
